{
    "routes": [
        {
            "route": "/{login,logout}",
            "allowedRoles": ["anonymous", "authenticated", "verified"]
        },
        {
            "route": "/.auth/login/{aad,google,github}",
            "allowedRoles": ["anonymous", "authenticated", "verified"]
        },
        {
            "route": "/.auth/login/*",
            "statusCode": 404
        },
        {
            "route": "/.auth/invitations/accept",
            "allowedRoles": ["anonymous", "authenticated", "verified"]
        },
        {
            "route": "/logout",
            "redirect": ".auth/logout"
        },
        {
            "route": "/*",
            "allowedRoles": ["verified"]
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/login"
        }
    }
}